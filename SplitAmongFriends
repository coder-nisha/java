import java.util.Scanner;

public class SplitAmongFriends{
    public static void main(String args[]){
        Double bill, amount;
        int num;
        Scanner sc = new Scanner(System.in);
        System.out.println("expenditiure");
        bill = sc.nextDouble();
        System.out.println("number of friends");
        num = sc.nextInt();
        amount = bill / num;
        System.out.println("the expenditiure is  " + bill + " and number of frieds are " + num + " and the splitted amounts are " + amount );
        

    }
}